    "@angular/router": "21.0.5",
    "@tiptap/core": "^3.10.1",
    "@tiptap/starter-kit": "^3.10.1",
    "@types/prismjs": "^1.26.5",
    "ngx-tiptap": "^14.0.1",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
