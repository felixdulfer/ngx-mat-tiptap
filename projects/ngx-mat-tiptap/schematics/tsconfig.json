{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "outDir": "./.schematics",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
